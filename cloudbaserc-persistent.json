{
  "version": "2.0",
  "envId": "your-env-id",
  "framework": {
    "name": "cloudbase-ai-persistent",
    "plugins": {
      "client": {
        "use": "@cloudbase/framework-plugin-node",
        "inputs": {
          "entry": "server/index.js",
          "path": "/api",
          "name": "api",
          "region": "ap-shanghai",
          "runtime": "Nodejs12.16",
          "timeout": 30,
          "memory": 512,
          "envVariables": {
            "NODE_ENV": "production",
            "DB_HOST": "your-db-host",
            "DB_PORT": "3306",
            "DB_USER": "your-db-user",
            "DB_PASSWORD": "your-db-password",
            "DB_NAME": "cloudbase_ai",
            "JWT_SECRET": "your-jwt-secret",
            "OPENAI_API_KEY": "your-openai-api-key"
          },
          "installDependency": true,
          "buildCommand": "npm run build",
          "startCommand": "npm start"
        }
      },
      "static": {
        "use": "@cloudbase/framework-plugin-website",
        "inputs": {
          "buildCommand": "npm run build:static",
          "outputPath": "public",
          "cloudPath": "/"
        }
      }
    }
  },
  "triggers": [
    {
      "name": "api",
      "type": "timer",
      "config": "0 */5 * * * * *",
      "handler": "server/handlers/health-check.js"
    }
  ],
  "function": {
    "timeout": 30,
    "memory": 512,
    "runtime": "Nodejs12.16",
    "environment": {
      "variables": {
        "NODE_ENV": "production",
        "DB_HOST": "your-db-host",
        "DB_PORT": "3306",
        "DB_USER": "your-db-user",
        "DB_PASSWORD": "your-db-password",
        "DB_NAME": "cloudbase_ai",
        "JWT_SECRET": "your-jwt-secret",
        "OPENAI_API_KEY": "your-openai-api-key"
      }
    }
  },
  "database": {
    "mysql": {
      "host": "your-db-host",
      "port": 3306,
      "user": "your-db-user",
      "password": "your-db-password",
      "database": "cloudbase_ai"
    }
  },
  "storage": {
    "bucket": "cloudbase-ai-storage",
    "region": "ap-shanghai"
  }
} 