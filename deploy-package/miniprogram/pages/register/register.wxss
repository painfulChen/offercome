/* pages/register/register.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  min-height: 100vh;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}

/* 头部样式 */
.register-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 50rpx;
  width: 100%;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 表单样式 */
.register-form {
  width: 100%;
  margin-bottom: 40rpx;
}

.error-message {
  background-color: #fff2f0;
  border: 1rpx solid #ffccc7;
  padding: 20rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.error-message text {
  color: #ff4d4f;
  font-size: 26rpx;
}

.form-item {
  margin-bottom: 24rpx;
}

.input-wrapper {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #f5f5f5;
  padding: 0 30rpx;
  position: relative;
}

.input-wrapper.error {
  border: 1rpx solid #ff4d4f;
  background-color: #fff2f0;
}

.error-text {
  font-size: 24rpx;
  color: #ff4d4f;
  padding: 10rpx 30rpx 0;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.input {
  flex: 1;
  height: 100%;
  font-size: 28rpx;
}

.password-toggle {
  padding: 20rpx;
  margin-right: -20rpx;
}

.toggle-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 同意条款选项 */
.agree-terms {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
  padding: 0 10rpx;
}

.checkbox {
  width: 32rpx;
  height: 32rpx;
  border-radius: 6rpx;
  border: 2rpx solid #ddd;
  margin-right: 16rpx;
  margin-top: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.checkbox.checked {
  border-color: #1aad19;
  background-color: #1aad19;
}

.terms-text {
  font-size: 26rpx;
  color: #666;
  flex: 1;
  line-height: 1.6;
}

.link {
  color: #1aad19;
  display: inline;
}

/* 注册按钮 */
.register-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
  position: relative;
}

.register-btn.loading {
  opacity: 0.8;
}

.loading-icon {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top: 4rpx solid #fff;
  border-radius: 50%;
  margin-right: 16rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 分割线 */
.divider {
  display: flex;
  align-items: center;
  margin: 40rpx 0;
}

.line {
  flex: 1;
  height: 1rpx;
  background-color: #eaeaea;
}

.divider text {
  padding: 0 30rpx;
  font-size: 26rpx;
  color: #999;
}

/* 微信注册按钮 */
.wechat-btn {
  width: 100%;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 16rpx;
}

/* 登录链接 */
.login-link {
  display: flex;
  justify-content: center;
  font-size: 28rpx;
}

.login-link text {
  color: #666;
}

.login-link .link {
  color: #1aad19;
  margin-left: 10rpx;
}