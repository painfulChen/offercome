/* pages/chat/chat.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #eaeaea;
  position: relative;
  z-index: 10;
}

.conversation-selector {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}

.current-title {
  font-size: 28rpx;
  color: #333;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dropdown-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 10rpx;
}

.header-actions {
  display: flex;
  align-items: center;
}

.action-btn {
  padding: 10rpx;
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

/* 会话选择器弹出层 */
.conversation-dropdown {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 100;
  display: flex;
  flex-direction: column;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s;
}

.conversation-dropdown.show {
  opacity: 1;
  pointer-events: auto;
}

.dropdown-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
}

.dropdown-content {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  max-height: 70%;
  background-color: #fff;
  border-bottom-left-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.dropdown-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eaeaea;
}

.dropdown-header text {
  font-size: 32rpx;
  font-weight: 500;
}

.close-btn image {
  width: 40rpx;
  height: 40rpx;
}

.conversation-list {
  max-height: 800rpx;
}

.conversation-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eaeaea;
}

.conversation-item.active {
  background-color: #f0f9eb;
}

.conversation-info {
  flex: 1;
  overflow: hidden;
}

.conversation-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.conversation-time {
  font-size: 24rpx;
  color: #999;
}

.unread-badge {
  background-color: #ff4d4f;
  color: #fff;
  font-size: 20rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
}

.new-conversation-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eaeaea;
}

.new-conversation-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.new-conversation-btn text {
  font-size: 28rpx;
  color: #1aad19;
}

/* 消息列表 */
.message-list {
  flex: 1;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}

.loading-more {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-spinner {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(0, 0, 0, 0.1);
  border-top: 4rpx solid #1aad19;
  border-radius: 50%;
  margin-right: 20rpx;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-more text {
  font-size: 24rpx;
  color: #999;
}

.time-divider {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 30rpx 0;
}

.time-divider text {
  font-size: 24rpx;
  color: #999;
  background-color: #f5f5f5;
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

.message-item {
  display: flex;
  margin-bottom: 30rpx;
  position: relative;
}

.message-item.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #eaeaea;
  flex-shrink: 0;
}

.message-content {
  max-width: 70%;
  margin: 0 20rpx;
  border-radius: 20rpx;
  padding: 20rpx;
  position: relative;
}

.message-item.assistant .message-content {
  background-color: #fff;
  color: #333;
}

.message-item.user .message-content {
  background-color: #1aad19;
  color: #fff;
}

.message-content.pending {
  opacity: 0.7;
}

.text-content {
  font-size: 28rpx;
  line-height: 1.5;
  word-break: break-all;
}

.image-content image {
  max-width: 100%;
  border-radius: 10rpx;
  margin-bottom: 10rpx;
}

.voice-content {
  display: flex;
  align-items: center;
  min-width: 120rpx;
}

.voice-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.voice-duration {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.message-actions {
  position: absolute;
  right: 0;
  bottom: -60rpx;
  display: flex;
  background-color: #fff;
  border-radius: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  padding: 10rpx;
  z-index: 5;
  opacity: 0;
  transform: translateY(-10rpx);
  transition: opacity 0.3s, transform 0.3s;
}

.message-item.user .message-actions {
  right: auto;
  left: 0;
}

.message-content:active .message-actions {
  opacity: 1;
  transform: translateY(0);
}

.message-actions .action-btn {
  padding: 10rpx;
}

.message-actions .action-btn image {
  width: 36rpx;
  height: 36rpx;
}

/* AI思考中状态 */
.thinking-indicator {
  display: flex;
  align-items: center;
  margin: 20rpx 0 20rpx 100rpx;
}

.thinking-dots {
  display: flex;
  margin-right: 10rpx;
}

.dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background-color: #1aad19;
  margin: 0 6rpx;
  opacity: 0.6;
  animation: pulse 1.5s infinite ease-in-out;
}

.dot:nth-child(2) {
  animation-delay: 0.5s;
}

.dot:nth-child(3) {
  animation-delay: 1s;
}

@keyframes pulse {
  0%, 100% { opacity: 0.6; transform: scale(1); }
  50% { opacity: 1; transform: scale(1.2); }
}

.thinking-indicator text {
  font-size: 24rpx;
  color: #999;
}

/* 底部输入区域 */
.input-area {
  background-color: #fff;
  border-top: 1rpx solid #eaeaea;
  padding: 20rpx 30rpx;
  position: relative;
  z-index: 10;
}

.voice-input-mode {
  display: flex;
  align-items: center;
}

.mode-switch {
  padding: 20rpx;
  margin: 0 10rpx;
}

.mode-switch image {
  width: 44rpx;
  height: 44rpx;
}

.voice-button {
  flex: 1;
  height: 80rpx;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.voice-button text {
  font-size: 28rpx;
  color: #666;
}

.recording-status {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.recording-tip {
  width: 300rpx;
  height: 300rpx;
  background-color: rgba(0, 0, 0, 0.7);
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
}

.recording-tip.cancel {
  background-color: rgba(255, 0, 0, 0.7);
}

.recording-wave {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #1aad19;
  margin-bottom: 30rpx;
  position: relative;
}

.recording-wave::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 60rpx;
  height: 60rpx;
  background-color: #fff;
  border-radius: 50%;
  transform: translate(-50%, -50%);
}

.recording-tip.cancel .recording-wave {
  background-color: #ff4d4f;
}

.recording-tip text {
  font-size: 28rpx;
  text-align: center;
  padding: 0 20rpx;
}

.text-input-mode {
  display: flex;
  align-items: center;
}

.input-wrapper {
  flex: 1;
  background-color: #f5f5f5;
  border-radius: 40rpx;
  padding: 20rpx 30rpx;
  margin: 0 10rpx;
  max-height: 200rpx;
  overflow-y: auto;
}

.input {
  width: 100%;
  min-height: 40rpx;
  max-height: 160rpx;
  font-size: 28rpx;
  line-height: 40rpx;
}

.emoji-btn, .more-btn {
  padding: 20rpx;
}

.emoji-btn image, .more-btn image {
  width: 44rpx;
  height: 44rpx;
}

.send-btn {
  width: 0;
  height: 80rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: width 0.3s;
}

.send-btn.show {
  width: 80rpx;
}

.send-btn image {
  width: 44rpx;
  height: 44rpx;
}

/* 表情选择器 */
.emoji-picker {
  position: absolute;
  left: 0;
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  border-top: 1rpx solid #eaeaea;
  z-index: 5;
}

.emoji-list {
  height: 100%;
  padding: 20rpx;
  box-sizing: border-box;
}

.emoji-grid {
  display: flex;
  flex-wrap: wrap;
}

.emoji-item {
  width: 12.5%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

/* 更多功能面板 */
.more-panel {
  position: absolute;
  left: 0;
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  border-top: 1rpx solid #eaeaea;
  z-index: 5;
  padding: 30rpx;
  box-sizing: border-box;
}

.panel-grid {
  display: flex;
  flex-wrap: wrap;
}

.panel-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.panel-icon {
  width: 100rpx;
  height: 100rpx;
  background-color: #f5f5f5;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 16rpx;
}

.panel-icon image {
  width: 50rpx;
  height: 50rpx;
}

.panel-item text {
  font-size: 24rpx;
  color: #666;
}