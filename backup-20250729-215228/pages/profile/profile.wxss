/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 用户信息区域 */
.user-info-section {
  background-color: #fff;
  padding: 40rpx 30rpx;
  margin-bottom: 20rpx;
}

/* 未登录状态 */
.not-logged-in {
  display: flex;
  align-items: center;
}

.default-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.login-prompt {
  flex: 1;
}

.prompt-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.login-btn {
  width: 200rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #1aad19;
  border-radius: 35rpx;
  padding: 0;
}

/* 加载中状态 */
.loading-state {
  display: flex;
  align-items: center;
}

.loading-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background-color: #eaeaea;
  margin-right: 30rpx;
  position: relative;
}

.loading-spinner {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid rgba(0, 0, 0, 0.1);
  border-top: 4rpx solid #1aad19;
  border-radius: 50%;
  transform: translate(-50%, -50%);
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: translate(-50%, -50%) rotate(0deg); }
  100% { transform: translate(-50%, -50%) rotate(360deg); }
}

.loading-info {
  flex: 1;
}

.loading-line {
  height: 30rpx;
  width: 60%;
  background-color: #eaeaea;
  border-radius: 15rpx;
  margin-bottom: 20rpx;
}

.loading-line.short {
  width: 40%;
}

/* 已登录状态 */
.logged-in {
  display: flex;
  align-items: center;
}

.avatar-container {
  position: relative;
  margin-right: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.edit-badge {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #1aad19;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.edit-badge image {
  width: 24rpx;
  height: 24rpx;
}

.user-details {
  flex: 1;
}

.user-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.user-name {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-right: 20rpx;
}

.user-id {
  font-size: 24rpx;
  color: #999;
}

.membership-badge {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  background-color: #f5f5f5;
  border-radius: 30rpx;
}

.membership-badge.active {
  background-color: #fff5e6;
}

.member-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 10rpx;
}

.membership-badge text {
  font-size: 24rpx;
  color: #666;
}

.membership-badge.active text {
  color: #ff9500;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

/* 会员卡片 */
.member-card {
  margin: 0 30rpx 20rpx;
  background: linear-gradient(135deg, #ffcc00, #ff9500);
  border-radius: 20rpx;
  padding: 30rpx;
  color: #fff;
  box-shadow: 0 4rpx 20rpx rgba(255, 149, 0, 0.3);
}

.card-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-left {
  flex: 1;
}

.card-title {
  display: flex;
  align-items: center;
  margin-bottom: 10rpx;
}

.card-title image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.card-title text {
  font-size: 36rpx;
  font-weight: 500;
}

.card-expiry {
  font-size: 24rpx;
  opacity: 0.8;
}

.card-right {
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 30rpx;
}

.card-right text {
  font-size: 24rpx;
  margin-right: 10rpx;
}

.card-right image {
  width: 24rpx;
  height: 24rpx;
}

.card-benefits {
  display: flex;
  justify-content: space-between;
}

.benefit-item {
  display: flex;
  align-items: center;
}

.benefit-item image {
  width: 24rpx;
  height: 24rpx;
  margin-right: 8rpx;
}

.benefit-item text {
  font-size: 24rpx;
}

/* 推广卡片 */
.promo-card {
  margin: 0 30rpx 20rpx;
  height: 200rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}

.promo-bg {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.promo-content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  padding: 0 40rpx;
}

.promo-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  margin-bottom: 10rpx;
}

.promo-desc {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 20rpx;
}

.promo-btn {
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  color: #ff9500;
  background-color: #fff;
  border-radius: 30rpx;
  padding: 0;
}

/* 设置列表 */
.settings-section {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.settings-list {
  padding: 0 30rpx;
}

.settings-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eaeaea;
}

.settings-item:last-child {
  border-bottom: none;
}

.item-left {
  display: flex;
  align-items: center;
}

.item-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.item-title {
  font-size: 28rpx;
  color: #333;
}

/* 退出登录按钮 */
.logout-section {
  padding: 40rpx 30rpx;
}

.logout-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #ff4d4f;
  background-color: #fff;
  border-radius: 45rpx;
}

/* 会员弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.member-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  z-index: 101;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eaeaea;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.close-btn image {
  width: 40rpx;
  height: 40rpx;
}

.modal-content {
  flex: 1;
  overflow-y: auto;
  padding: 30rpx;
}

.privilege-list {
  display: flex;
  flex-direction: column;
}

.privilege-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 40rpx;
}

.privilege-item image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}

.privilege-info {
  flex: 1;
}

.privilege-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.privilege-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #eaeaea;
}

.modal-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #ff9500;
  border-radius: 45rpx;
}