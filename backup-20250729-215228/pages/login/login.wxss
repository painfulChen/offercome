/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  background-color: #fff;
  padding: 0 40rpx;
  position: relative;
}

/* 返回按钮 */
.back-btn {
  position: absolute;
  top: 80rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.back-btn image {
  width: 40rpx;
  height: 40rpx;
}

/* 登录标题 */
.login-header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 160rpx 0 80rpx;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 登录方式切换 */
.login-type-tabs {
  display: flex;
  justify-content: center;
  margin-bottom: 60rpx;
}

.tab-item {
  position: relative;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
  color: #999;
  margin: 0 20rpx;
}

.tab-item.active {
  color: #333;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: #1aad19;
  border-radius: 3rpx;
}

/* 登录表单 */
.login-form {
  width: 100%;
}

/* 输入框组 */
.input-group {
  display: flex;
  align-items: center;
  height: 100rpx;
  border-bottom: 1rpx solid #eaeaea;
  margin-bottom: 40rpx;
}

.input-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.input {
  flex: 1;
  height: 100%;
  font-size: 32rpx;
}

/* 验证码输入组 */
.verification-group {
  height: 0;
  overflow: hidden;
  margin-bottom: 0;
  opacity: 0;
  transition: all 0.3s;
}

.verification-group.show {
  height: 100rpx;
  margin-bottom: 40rpx;
  opacity: 1;
}

.verification-btn {
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 24rpx;
  border-radius: 30rpx;
  white-space: nowrap;
}

.verification-btn.disabled {
  background-color: #ccc;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  margin-top: 60rpx;
}

.login-btn[disabled] {
  background-color: #9ed99d;
  color: rgba(255, 255, 255, 0.8);
}

/* 微信登录 */
.wechat-login-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 40rpx 0 60rpx;
}

.wechat-login-tip image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.wechat-login-tip text {
  font-size: 28rpx;
  color: #999;
}

.wechat-login-btn {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #07c160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.wechat-login-btn image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.wechat-login-btn[disabled] {
  background-color: #9ed99d;
  color: rgba(255, 255, 255, 0.8);
}

/* 用户协议 */
.terms-section {
  display: flex;
  align-items: flex-start;
  margin-top: 40rpx;
}

.checkbox {
  width: 40rpx;
  height: 40rpx;
  border: 1rpx solid #ddd;
  border-radius: 50%;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.checkbox.checked {
  border-color: #1aad19;
  background-color: #1aad19;
}

.checkbox image {
  width: 24rpx;
  height: 24rpx;
}

.terms-text {
  flex: 1;
  font-size: 24rpx;
  color: #999;
  line-height: 40rpx;
}

.link {
  color: #1aad19;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  z-index: 101;
  display: flex;
  flex-direction: column;
  max-height: 80vh;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eaeaea;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.close-btn image {
  width: 40rpx;
  height: 40rpx;
}

.modal-content {
  flex: 1;
  max-height: 60vh;
  padding: 30rpx;
}

.terms-content {
  padding-bottom: 30rpx;
}

.terms-title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 40rpx;
  text-align: center;
}

.terms-section {
  margin-bottom: 30rpx;
}

.terms-subtitle {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.terms-paragraph {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.terms-list {
  padding-left: 20rpx;
}

.terms-list-item {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.modal-footer {
  padding: 30rpx;
  border-top: 1rpx solid #eaeaea;
}

.modal-btn {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #1aad19;
  color: #fff;
  font-size: 30rpx;
  border-radius: 40rpx;
}