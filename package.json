{
  "name": "cloudbase-ai-persistent",
  "version": "1.0.0",
  "description": "CloudBase AI开发框架 - 数据持久化版本",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "build": "echo '构建完成'",
    "build:static": "echo '静态资源构建完成'",
    "test": "jest",
    "init-db": "node server/scripts/init-database-persistent.js",
    "backup": "node server/scripts/backup-restore.js backup",
    "backup-table": "node server/scripts/backup-restore.js backup",
    "restore": "node server/scripts/backup-restore.js restore",
    "list-backups": "node server/scripts/backup-restore.js list",
    "cleanup-backups": "node server/scripts/backup-restore.js cleanup",
    "deploy": "./deploy-persistent.sh",
    "auto-deploy": "./auto-deploy.sh",
    "health-check": "node -e \"const healthCheck = require('./server/handlers/health-check'); console.log('健康检查模块加载成功');\"",
    "db-test": "node -e \"const { createPool } = require('./server/config/database-persistent'); createPool().then(() => console.log('✅ 数据库连接成功')).catch(err => console.error('❌ 数据库连接失败:', err.message));\"",
    "migrate": "node server/scripts/migrate-data.js",
    "migrate-json": "node server/scripts/migrate-data.js migrate-json",
    "migrate-mongo": "node server/scripts/migrate-data.js migrate-mongo",
    "performance-report": "node server/scripts/performance-monitor.js report",
    "performance-monitor": "node server/scripts/performance-monitor.js monitor",
    "performance-test": "node server/scripts/performance-monitor.js test"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.14.3",
    "openai": "^4.20.0",
    "redis": "^4.6.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "cloudbase",
    "ai",
    "persistent",
    "mysql",
    "wechat-miniprogram"
  ],
  "author": "CloudBase AI Team",
  "license": "MIT"
}
